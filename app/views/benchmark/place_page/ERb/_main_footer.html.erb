      <footer id="main-footer">
        <%= render :partial => "#{@partial_base}/language_selector" %>
        <%= render :partial => "#{@partial_base}/social_container" %>
        <nav class="site_map">
          <% @site_map.each do |heading, values| %>
            <div class="<%= heading.gsub(/\s+/, '').downcase %>">
              <div class="heading"><%= heading %></div>
              <ul class="links">
                <% values.each do |title, link| %>
                  <li><a href="<%= link.html_safe %>"><%= title %></a></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </nav>
        <div class="copyright">&copy; 1999 - 2014&nbsp;&nbsp;&nbsp;&nbsp;Couchsurfing International, Inc. A socially responsible, Certified B Corporation</div>
      </footer>
